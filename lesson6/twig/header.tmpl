<div class="header">
    <div class="container">
        <a href="/public/">
            <img class="logo" src="/public/img/logo.png" alt="">
        </a>
        <a href="/public/">Главная</a><br>
        <div class="basket">
            <a href="/public/product/basket">Корзина: {{ count }}</a>
            <div class="hover-list">
                Ваш заказ:
                {% for item in items %}
                <div class="product-item">
                    {{ item.name }} - {{ item.price }} руб.
                </div>

                {% endfor %}

            </div>
        </div>

        <div class="auth">
            {% if auth %}
            "Добро пожаловать, {{ username }} <a href='/public/user/logout'> [выход]</a>";
            {% else %}
            <form method="post" action="/public/user/login">
                <input type='text' name='login' placeholder='Логин'>
                <input type='password' name='pass' placeholder='Пароль'>
                Save? <input type='checkbox' name='save'>
                <input type='submit' name='send'>
            </form>
            <a href="/public/user/reg" class="reg">Зарегистрироваться</a>
            {% endif %}
        </div>
    </div>
</div>

